<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.is416.smujio.JioActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.75">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/bt_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tb_map"
                style="@style/tab_menu_item"
                android:drawableTop="@drawable/tab_menu_map"
                android:textSize="16sp"
                android:text="@string/tab_menu_map"
                android:layout_weight="2"/>

            <RadioButton
                android:id="@+id/tb_init"
                android:drawableTop="@drawable/tab_init"
                style="@style/tab_menu_item"
                android:layout_weight="0.8"/>

            <RadioButton
                android:id="@+id/tb_pair"
                style="@style/tab_menu_item"
                android:drawableTop="@drawable/tab_menu_pair"
                android:textSize="16sp"
                android:text="@string/tab_menu_pair"
                android:layout_weight="2"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>
